@using AnkietaP.Models
@* model LoginViewModel *@
@model mieszkaniec 

@{
    ViewBag.Title = "Logowanie";
}
 
        @using (Html.BeginForm("DetailsP", "mieszkaniecs", FormMethod.Get))
        {
            <div class="jumbotron" style="background-color: lightgray ; box-shadow: 2px 2px 15px #000">
                <div class="container">

                    <div class="col-sm-6" style="color:black">
                        <div class="jumbotron" style="background-color: white ; box-shadow: 2px 2px 15px #000">

                            <i class="fa  fa-user" style="color: black"></i> Pesel: @Html.TextBox("pes", ViewBag.CurrentFilter as string, new { @class = "form-control", @placeholder = "Wpisz Pesel" })


                            <i class="fa  fa-lock" style="color: black"></i>  Hasło: @Html.Password("pas", ViewBag.CurrentFilter as string, new { @type = "password", @class = "form-control", @placeholder = "Wpisz Hasło" })



                            <input class="btn btn-default" type="submit" value="Zaloguj się" />

                        </div>

                    </div>


                    <div align="center" class="col-sm-6">

                        <img class="img-responsive" src="~/Content/LoginRed.jpg" />
                    </div>
                </div>
            </div>

            

        }

 